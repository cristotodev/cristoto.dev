---
interface Props {
	date: number;
}

const { date } = Astro.props;
---

<time datetime={new Date(date).toISOString()}>
	{
		new Date(date).toLocaleDateString('es-es', {
			year: 'numeric',
			month: '2-digit',
			day: 'numeric',
			hour: '2-digit',
			minute: '2-digit',
			second: '2-digit'
		})
	}
</time>
