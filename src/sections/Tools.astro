---
import Tool from "../components/Tool.astro";
import { TOOLS } from "../consts";
---

<h2 class="text-center text-4xl font-bold text-gray-800 sm:text-5xl dark:text-white">&#128295; Herramientas</h2>

<div
    class="p-5 mt-16 grid gap-3 select-none xl:grid-cols-8 md:grid-cols-4 sm:grid-cols-3 bg-gray-100 rounded-xl"
>
    {
        TOOLS.map(({ id, name }) => (
            <Tool tool={name}>
                <img
                    src={`/img/tools/${id}.svg`}
                    loading="lazy"
                    fetchpriority="low"
                    alt={`Logo de ${name}`}
                    class=""
                />
            </Tool>
        ))
    }
</div>
